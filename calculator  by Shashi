#include <stdio.h>

int main() { 
float a,b; 
char opperater; 
 printf("please enter first opperater(+,-,*,/)==");
 scanf("\n%c",&opperater);
 printf("enter first number:");
 scanf("\n%f",&a);
 
 printf("enter second number:");
 scanf("\n%f",&b);
 switch(opperater) {  
     case'+':
     printf("%f+%f==%f",a,b,a+b);
     break;
     case'-':
     printf("%f-%f==%f",a,b,a-b);
     break;
     case'*':
     printf("%f*%f==%f",a,b,a*b);
     break;
     case'/':
     if(b!=0){
     printf("%f/%f==%f",a,b,a/b); 
     }
     else{ ("printf divition by 0 is not allow"); }
     break;
     default:
     printf("invalide! please enter bellow this opperaters");
 }
 
    return 0;
}
